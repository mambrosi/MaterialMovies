<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowBackground">@drawable/window_background</item>-->

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/darker_color</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="AppTheme.TransparentStatusBar" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?android:colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.DetailToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">?attr/colorAccent</item>
    </style>


</resources>
